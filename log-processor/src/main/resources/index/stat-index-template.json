{
  "index_patterns": "stat-*",
  "order": 1,
  "settings": {
    "number_of_shards": 1,
    "refresh_interval": "5s"
  },
  "mappings": {
    "stat": {
      "dynamic_templates": [
        {
          "stats": {
            "path_match": "stats.*",
            "mapping": {
              "type": "scaled_float",
              "scaling_factor": 1000
            }
          }
        }
      ],
      "properties": {
        "date": {
          "type": "date",
          "format": "strict_date_optional_time"
        },
        "app": {
          "type": "keyword"
        },
        "server_ip": {
          "type": "ip"
        }
      }
    }
  }
}
