{
  "index_patterns": "trace-*",
  "order": 1,
  "settings": {
    "number_of_shards": 1,
    "refresh_interval": "5s"
  },
  "mappings": {
    "trace": {
      "properties": {
        "date": {
          "type": "date",
          "format": "strict_date_optional_time"
        },
        "app": {
          "type": "keyword"
        },
        "result": {
          "type": "keyword"
        },
        "action": {
          "type": "keyword"
        },
        "error_code": {
          "type": "keyword"
        },
        "content": {
          "type": "text",
          "index": "false"
        }
      }
    }
  }
}
